<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="44dp"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:text="Your Runs"
        android:textStyle="bold" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:id="@+id/myRunsList"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04" />

    <TextView
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="44dp"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:text="Top Runners"
        android:textStyle="bold" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:id="@+id/topRunnersList"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04" />


    <Button android:layout_width="180dp" android:layout_height="wrap_content"
        android:text="Start New Run!"
        android:layout_gravity="center_horizontal"
        android:id="@+id/startRun" />

</LinearLayout>